<div class="jumbotron">
  <div class="panel panel-primary">
    <div class="panel-heading">@<%= @user[:username] %>'s Twitter Stats</div>
    <div class="panel-body">
      <p>Weekly Unfollow Reports <%= render 'reporting_status' %></p>
      <table class="table">
        <tr>
          <th>Name</th>
          <th>Tweets</th>
          <th>Followers</th>
          <th>Following</th>
        </tr>
        <tr>
          <td><%= @user[:name] %></td>
          <td><%= @user[:tweet_count] %></td>
          <td><%= @user[:followers_count] %></td>
          <td><%= @user[:following_count] %></td>
        </tr>
      </table>
      <%= render 'reporting_update' %>
  </div>
</div>
